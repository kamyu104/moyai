FTDIR=../../freetype-2.4.10
INCDIRS=-I $(FTDIR)/include/freetype -I $(FTDIR)/include #-DFT_ADVANCES_H="<freetype/ftadvanc.h>"
SRCS=main.c $(FTDIR)/src/base/ftobjs.c $(FTDIR)/src/base/ftapi.c $(FTDIR)/src/base/ftstream.c $(FTDIR)/src/base/ftsystem.c $(FTDIR)/src/base/ftutil.c $(FTDIR)/src/base/ftoutln.c $(FTDIR)/src/base/ftglyph.c $(FTDIR)/src/base/ftgloadr.c $(FTDIR)/src/base/ftcalc.c $(FTDIR)/src/base/ftrfork.c $(FTDIR)/src/base/ftbitmap.c $(FTDIR)/src/base/ftinit.c $(FTDIR)/src/base/fttrigon.c $(FTDIR)/src/cff/cffdrivr.c $(FTDIR)/src/cff/cffpic.c  $(FTDIR)/src/bdf/bdfdrivr.c $(FTDIR)/src/bdf/bdflib.c $(FTDIR)/src/cff/cffcmap.c   $(FTDIR)/src/cff/cffobjs.c $(FTDIR)/src/cff/cffload.c $(FTDIR)/src/cff/cffparse.c  $(FTDIR)/src/cff/cffgload.c  $(FTDIR)/src/autofit/afpic.c $(FTDIR)/src/autofit/afmodule.c $(FTDIR)/src/autofit/afglobal.c $(FTDIR)/src/autofit/afcjk.c $(FTDIR)/src/autofit/afhints.c $(FTDIR)/src/base/ftadvanc.c $(FTDIR)/src/autofit/afdummy.c $(FTDIR)/src/autofit/afindic.c $(FTDIR)/src/autofit/aflatin.c $(FTDIR)/src/autofit/afloader.c $(FTDIR)/src/autofit/afangles.c $(FTDIR)/src/raster/ftrend1.c $(FTDIR)/src/smooth/ftsmooth.c $(FTDIR)/src/smooth/ftgrays.c $(FTDIR)/src/raster/ftraster.c $(FTDIR)/src/pcf/pcfdrivr.c $(FTDIR)/src/pfr/pfrdrivr.c $(FTDIR)/src/pcf/pcfutil.c $(FTDIR)/src/gzip/ftgzip.c $(FTDIR)/src/lzw/ftlzw.c $(FTDIR)/src/pcf/pcfread.c $(FTDIR)/src/pfr/pfrobjs.c $(FTDIR)/src/pfr/pfrcmap.c $(FTDIR)/src/pfr/pfrgload.c $(FTDIR)/src/pfr/pfrload.c $(FTDIR)/src/pfr/pfrsbit.c $(FTDIR)/src/psaux/psauxmod.c $(FTDIR)/src/psaux/afmparse.c $(FTDIR)/src/psaux/psconv.c $(FTDIR)/src/psaux/psobjs.c $(FTDIR)/src/pshinter/pshmod.c $(FTDIR)/src/pshinter/pshpic.c $(FTDIR)/src/pshinter/pshrec.c $(FTDIR)/src/pshinter/pshalgo.c $(FTDIR)/src/pshinter/pshglob.c $(FTDIR)/src/psnames/psmodule.c $(FTDIR)/src/psnames/pspic.c $(FTDIR)/src/sfnt/sfdriver.c $(FTDIR)/src/sfnt/sfntpic.c $(FTDIR)/src/sfnt/sfobjs.c $(FTDIR)/src/psaux/t1cmap.c $(FTDIR)/src/truetype/ttobjs.c $(FTDIR)/src/truetype/ttpload.c $(FTDIR)/src/truetype/ttinterp.c $(FTDIR)/src/sfnt/ttsbit.c $(FTDIR)/src/sfnt/ttmtx.c $(FTDIR)/src/truetype/ttgload.c $(FTDIR)/src/psaux/t1decode.c $(FTDIR)/src/truetype/ttgxvar.c $(FTDIR)/src/type1/t1gload.c $(FTDIR)/src/type1/t1driver.c $(FTDIR)/src/sfnt/ttkern.c $(FTDIR)/src/type1/t1objs.c $(FTDIR)/src/type1/t1afm.c $(FTDIR)/src/type1/t1load.c $(FTDIR)/src/type1/t1parse.c $(FTDIR)/src/sfnt/ttcmap.c $(FTDIR)/src/cid/cidriver.c $(FTDIR)/src/cid/cidobjs.c $(FTDIR)/src/cid/cidload.c $(FTDIR)/src/type42/t42drivr.c $(FTDIR)/src/type42/t42objs.c $(FTDIR)/src/sfnt/ttpost.c $(FTDIR)/src/cid/cidparse.c $(FTDIR)/src/cid/cidgload.c $(FTDIR)/src/type42/t42parse.c $(FTDIR)/src/truetype/ttdriver.c $(FTDIR)/src/truetype/ttpic.c $(FTDIR)/src/sfnt/ttbdf.c $(FTDIR)/src/sfnt/ttload.c $(FTDIR)/src/winfonts/winfnt.c

all: test freetype.js 

freetype.js: Makefile main.c
	emcc  -DFT2_BUILD_LIBRARY $(INCDIRS) -O1 $(SRCS) -o freetype.js -s EXPORTED_FUNCTIONS="['_load_font','_close_font','_get_bitmap','_get_left','_get_top','_get_width','_get_height','_get_pitch','_get_advance','_monochrome','_find_font','_main','_load_mem_font','_get_debug_code','_get_bitmap_opt_retcode']" --memory-init-file 0 -s EXPORT_NAME="'FTModule'" 


test: main.c Makefile
	gcc -DFT2_BUILD_LIBRARY $(INCDIRS) $(SRCS)
